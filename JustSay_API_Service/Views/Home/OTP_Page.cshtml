<head>
    <title>Verify your mobile number</title>
    <!--CSS-->
    <link href="~/Content/CSS/Common.css" rel="stylesheet" />
    <link href="~/Content/CSS/script_css/jquery-ui_1.css" rel="stylesheet" />
    <!--Bootstarp-->
    <link href="~/Content/Bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/Bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- JavaScript Bundle with Popper -->
    <script src="~/scripts/jquery-3.6.0.js"></script>
    <script src="~/scripts/jquery-ui.js"></script>
</head>
<body>
    <div>
        <div>
            <form class="box">
                <div style="padding: 10px;">
                    <div><label class="heading">Mobile number verification</label></div>
                    <div><label>Enter the code we just send on your mobile phone "</label><label id="lblPhn"></label><label>"</label></div>
                    <div class="">
                        <input type="text" maxlength="4" class="text_allign" id="otpnum" autocomplete="off"/>
                    </div>
                    <div><input type="button" value="Enter" onclick="otpenter()" /></div>
                    <div><label>Didn't recived the code</label></div>
                    <div><input type="button" value="Resend" /></div>
                </div>
            </form>
        </div>
    </div>
</body>

<script>
    $(document).ready(function(){
        var phnNo = sessionStorage.getItem("phnNum");
        $("#lblPhn").html(phnNo);
    })
    function otpenter() {
        var otpnum = $("#otpnum").val();
        if(otpnum==1111)
        {
            window.location.href = "@Url.Action("HomePage","Home")";
        }
        else{alert("Invalid OTP")}
    }

</script>
